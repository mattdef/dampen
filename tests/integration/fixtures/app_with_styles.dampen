<?xml version="1.0" encoding="UTF-8" ?>
<dampen version="1.0">
    <themes>
        <theme name="light">
            <palette
                primary="#3498db"
                secondary="#2ecc71"
                success="#27ae60"
                warning="#f39c12"
                danger="#e74c3c"
                background="#ffffff"
                surface="#f5f5f5"
                text="#000000"
                text_secondary="#6c757d" />
        </theme>
    </themes>
    <global_theme name="light" />
    
    <style_classes>
        <!-- Primary button style with state variants -->
        <style name="primary-button" widget="button">
            <base 
                background="#3498db" 
                color="#ffffff"
                border_width="0"
                border_radius="8" />
            <hover 
                background="#5dade2" />
            <active 
                background="#2980b9" />
        </style>
        
        <!-- Secondary button style -->
        <style name="secondary-button" widget="button">
            <base 
                background="#95a5a6" 
                color="#ffffff"
                border_width="0"
                border_radius="8" />
            <hover 
                background="#b4bcc2" />
        </style>
        
        <!-- Card container style -->
        <style name="card" widget="container">
            <base 
                background="#ffffff"
                border_width="1"
                border_color="#e0e0e0"
                border_radius="12"
                shadow="0 2 8 rgba(0,0,0,0.1)" />
        </style>
        
        <!-- Input field style -->
        <style name="input-field" widget="text_input">
            <base 
                background="#f5f5f5"
                border_width="1"
                border_color="#cccccc"
                border_radius="4" />
        </style>
    </style_classes>
    
    <column spacing="16" padding="20">
        <!-- Buttons with CSS classes -->
        <button label="Primary Action" class="primary-button" on_click="on_primary" />
        <button label="Secondary Action" class="secondary-button" on_click="on_secondary" />
        
        <!-- Button with inline style (highest priority) -->
        <button 
            label="Custom Styled" 
            background="#e74c3c" 
            color="#ffffff"
            on_click="on_custom" />
        
        <!-- Container with card style -->
        <container class="card" padding="16">
            <column spacing="8">
                <text value="Card Content" />
                <button label="Card Action" class="primary-button" />
            </column>
        </container>
        
        <!-- Text input with custom style -->
        <text_input 
            placeholder="Enter text..." 
            class="input-field"
            value="{input_value}"
            on_input="on_input_change" />
        
        <!-- Mixed: class + inline override -->
        <button 
            label="Mixed Style"
            class="secondary-button"
            background="#9b59b6"
            on_click="on_mixed" />
    </column>
</dampen>
